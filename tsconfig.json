{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "downlevelIteration": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "@types",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}